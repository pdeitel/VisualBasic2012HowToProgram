' Programmatically changing a Label's text.
Public Class ASimpleApp
   ' called when the program loads the Form
   Private Sub ASimpleApp_Load(sender As Object,
      e As EventArgs) Handles MyBase.Load

      Label1.Text = "Visual Basic is fun!"
   End Sub ' ASimpleApp_Load
End Class ' ASimpleApp













