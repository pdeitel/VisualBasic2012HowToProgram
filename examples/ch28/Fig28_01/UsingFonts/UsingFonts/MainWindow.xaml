<!-- Fig. 28.1: MainWindow.xaml -->
<!-- Formatting fonts in XAML code. -->
<Window x:Class="MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="UsingFonts" Height="120" Width="400">

   <StackPanel>
      <!-- make a font bold using the FontWeight -->
      <TextBlock TextWrapping="Wrap" Text="Arial 14 bold." 
         FontFamily="Arial" FontSize="14" FontWeight="Bold"/>

      <!-- if no font size is specified, default size is used -->
      <TextBlock TextWrapping="Wrap" 
         Text="Times New Roman plain, default size." 
         FontFamily="Times New Roman"/>

      <!-- specifying a different font size and using FontStyle -->
      <TextBlock TextWrapping="Wrap" 
         Text="Courier New 16 bold and italic." 
         FontFamily="Courier New" FontSize="16" 
         FontStyle="Italic" FontWeight="Bold"/>

      <!-- using Overline and Baseline TextDecorations -->
      <TextBlock TextWrapping="Wrap" 
         Text="Default font with overline and baseline.">
         <TextBlock.TextDecorations>
            <TextDecoration Location="Overline"/>
            <TextDecoration Location="Baseline"/>
         </TextBlock.TextDecorations>
      </TextBlock>

      <!-- using Strikethrough and Underline TextDecorations -->
      <TextBlock TextWrapping="Wrap"
         Text="Default font with strikethrough and underline.">
         <TextBlock.TextDecorations>
            <TextDecoration Location="Strikethrough"/>
            <TextDecoration Location="Underline"/>
         </TextBlock.TextDecorations>
      </TextBlock>
   </StackPanel>
</Window>

